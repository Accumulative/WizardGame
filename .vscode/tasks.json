{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++11",
                "game_client/src/**/*.cpp",
                "shared/*.cpp",
                "-lSDL2",
                "-lSDL2_net",
                "-lSDL2_ttf",
                "-lSDL2_image",
                "-o",
                "game_client/game_output"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}